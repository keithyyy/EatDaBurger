<div class="container">

    <h1> Eat Da Burger!</h1>

    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burgers}}

                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{ burgers/burger-block}}
                {{/if}}
                {{/each}}

            </ul>
        </div>
    </div>


    <panel>
        <formclass="create-form">
            <div class="form-group">
                <label for="newburger">New Burger:</label>
                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">Add Burger</button>
            </div>
        </form>
    </panel>

</div>