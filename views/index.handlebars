<div class="container">

    

    <div class="row">
        

        <div class="col-md-4">
            <h2>Burger Menu</h2>
            <ul>
                {{#each burgers}}

                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <img>
            <h1> Eat Da Burger!</h1>
            <p>Welcome to eat da burger where you can devour all the burgers you want!</p>
            <form id="create-form">
                <div class="form-group">
                    <label for="burger-name">Burger name: </label>
                    <input type="text" id="burger-name" name="name" placeholder="What's next?">
                    <button type="submit" id="devoured-btn" value="0">Add Burger</button>
                </div>
                
            </form>
        </div>

        <div class="col-md-4">
            <h2>In Ma Tummy</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}

            </ul>
        </div>
    </div>


    

</div>